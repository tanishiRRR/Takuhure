<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>カテゴリ一覧・追加</h4>
  </div>

  <%= form_with model: @category, url: admin_categories_path, method: :post, local: true do |f| %>
    <div class='form-group row mt-3'>
      <%= f.label :category_name, 'カテゴリ名', class: 'col-2 form-label' %>
      <%= f.text_field :category_name, autofocus: true, autocomplete: 'category-name', placeholder: 'カテゴリ名', class: 'col-5 form-control' %>
      <div class='col-5'><%= f.submit '新規登録', class: 'btn btn-success pl-5 pr-5' %></div>
    </div>
  <% end %>

  <div class='row mt-5'>
    <table class='col-6 table table-bordered'>
      <thead>
        <tr>
          <th style='width: 60%'>カテゴリ名</th>
          <th style='width: 40%'></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.category_name %></td>
            <td class='text-center'><%= link_to '編集する', edit_admin_category_path(category), class: 'btn btn-success btn-sm  pl-5 pr-5' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>