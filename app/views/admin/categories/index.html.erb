<div class="container">

  <div class="row mt-3">
    <h4>
      カテゴリ一覧・追加
    </h4>
  </div>

  <%= form_with model: @category, url: admin_categories_path, method: :post, local: true do |f| %>
    <div class="form-group row mt-3">
      <%= f.label :category_name, "カテゴリ名", class: "col-2 form-label" %>
      <%= f.text_field :category_name, required: true, autofocus: true, autocomplete: "category-name", placeholder: "カテゴリ名", class: "col-5 form-control" %>
      <div class="col-5"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>

  <div class="row mt-5">
    <table class="offset-2 col-6 table table-bordered">
      <thead>
        <tr>
          <th style="width: 70%">カテゴリ名</th>
          <th style="width: 30%"></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.category_name %></td>
            <td class="text-center">
              <%= link_to "編集する", edit_admin_category_path(category), method: :get, class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @categories %>
</div>