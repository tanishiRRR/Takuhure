<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>会員情報編集</h4>
  </div>

  <%= form_with model: @end_user, url: admin_end_user_path, method: :patch, local: true do |f| %>

    <div class='form-group row mt-3'>
      <%= f.label :profile_image, 'プロフィール画像', class: 'col-2 form-label' %>
      <div class='col10'><%= f.file_field :profile_image, accept: 'image/*' %></div>
    </div>

    <div class='row'>
      <p class='col-2'>会員ID</p>
      <div class='col-10'><%= @end_user.id %></div>
    </div>

    <div class='form-group row'>
      <%= f.label :account_name, 'アカウント名', class: 'col-2 form-label' %>
      <%= f.text_field :account_name, autofocus: true, placeholder: 'samplename', class: 'col-10 form-control' %>
    </div>

    <div class='form-group row'>
      <%= f.label :email, 'メールアドレス', class: 'col-2 form-label' %>
      <%= f.email_field :email, placeholder: 'sample@example.com', class: 'col-10 form-control' %>
    </div>

    <div class='form-group row'>
      <%= f.label :is_study, '学習ステータス', class: 'col-2 form-label' %>
      <%= f.select :is_study, EndUser.is_studies.keys.map {|k| [I18n.t("enums.end_user.is_study.#{k}"), k]}, class: 'col-10 form-control' %>
    </div>

    <div class='form-group row'>
      <%= f.label :exam_date, '受験予定日', class: 'col-2 form-label' %>
      <%= f.text_field :exam_date, placeholder: 'YYYY-MM-DD (例:2023-10-01)', class: 'col-10 form-control' %>
    </div>

    <div class='form-group row'>
      <%= f.label :is_deleted, '会員ステータス', class: 'col-2 form-label' %>
      <div class='col-10'>
        <%= f.radio_button :is_deleted, false, checked: false %>
        <%= f.label:is_deleted, "有効", value: false %>
        <%= f.radio_button :is_deleted, true, checked: true %>
        <%= f.label:is_deleted, "退会", value: true %>
      </div>
    </div>

    <div class='row'>
      <div class='offset-2 col-10 pl-0'>
        <%= f.submit '変更内容を保存', class: 'btn btn-success pl-5 pr-5' %>
      </div>
    </div>
  <% end %>

</div>