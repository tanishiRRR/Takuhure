<div class='container'>

  <div class='row mt-3'>
    <span class='border border-dark h4 bg-secondary text-white p-2'>管理者ログイン</span>
  </div>

  <%= form_with model: @admin, url: admin_session_path, method: :post, local: true do |f| %>
    <div class='form-group row mt-3'>
      <%= f.label :email, 'メールアドレス', class: 'col-2 form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'sample@example.com', class: 'col-10 form-control' %>
    </div>

    <div class='form-group row'>
      <%= f.label :password, 'パスワード', class: 'col-2 form-label' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'col-10 form-control' %>
    </div>

    <div class='row'>
      <div class='offset-2 col-10 pl-0'>
        <%= f.submit 'ログイン', class: 'btn btn-primary pl-5 pr-5' %>
    </div>
  <% end %>

</div>