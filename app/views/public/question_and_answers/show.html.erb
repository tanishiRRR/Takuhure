<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>Q&A詳細</h4>
  </div>

  <div class='row'>
    <h5 class='ml-5 p-2'>質問</h5>
  </div>

  <div class='row mt-1'>
    <div class='offset-1 col-10 border border-dark'>
      <div class='row ml-1 mt-1'>
        <%= image_tag @question.end_user.get_profile_image(100,100) %>
        <p class='d-flex align-items-center ml-3 mb-0' style='vertical-align:middle;'>
          <%= @question.end_user.account_name %><br>
          <%= I18n.l @question.date, format: :default %>
        </p>
      </div>
      <div class='row mt-3'>
        <table class='table table-borderless offset-1 col-10'>
          <tbody>
            <tr>
              <th style='width: 15%'>タイトル</th>
              <td style='width: 85%'><%= @question.title %></td>
            </tr>
            <tr>
              <th>カテゴリー</th>
              <td><%= @question.category.category_name %></td>
            </tr>
            <tr>
              <td colspan='2'><%= safe_join(@question.question.split("\n"), tag(:br)) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if @supplemental_questions.exists? %>
    <div class='row mt-2'>
      <h5 class='ml-5 p-2'>質問補足内容</h5>
    </div>
  <% end %>

  <div class='row mt-1'>
    <% @supplemental_questions.each do |supplemental_question| %>
      <div class='offset-1 col-10 border border-dark mt-2'>
        <div class='row ml-1 mt-1'>
          <%= image_tag @question.end_user.get_profile_image(100,100) %>
          <p class='d-flex align-items-center ml-3 mb-0' style='vertical-align:middle;'>
            <%= @question.end_user.account_name %><br>
            <%= I18n.l supplemental_question.created_at, format: :short_day %>
          </p>
        </div>
        <div class='row mt-3'>
          <table class='table table-borderless offset-1 col-10'>
            <tbody>
              <tr>
                <td><%= safe_join(supplemental_question.supplemental_question.split("\n"), tag(:br)) %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>

  <div class='row mt-5'>
    <%= link_to '回答を入力する', new_answer_path(question_id: @question.id), method: :get, class: 'offset-4 col-4 btn btn-success pl-5 pr-5' %>
  </div>

  <div class='row mt-5'>
    <h5 class='ml-5 p-2'>一番いいねが多いアンサー</h5>
  </div>

  <div class='row mt-1'>
    <div class='offset-1 col-10 border border-dark'>
      <div class='row ml-1 mt-1'>
        <!--画像-->
        <p class='d-flex align-items-center ml-3 mb-0' style='vertical-align:middle;'>
          <!--名前--><br>
          <!--投稿日-->
        </p>
      </div>
      <div class='row mt-3'>
        <table class='table table-borderless offset-1 col-10'>
          <tr>
            <th style='width: 20%'>回答</th>
            <td style='width: 80%'><!--回答--></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <% if @answers.exists? %>
    <div class='row mt-5'>
      <h5 class='ml-5 p-2'>その他のアンサー</h5>
    </div>
  <% end %>
  <% @answers.each do |answer| %>
  <div class='row mt-1'>
    <div class='offset-1 col-10 border border-dark'>
      <div class='row ml-1 mt-1'>
        <p><%= image_tag answer.end_user.get_profile_image(100,100) %></p>
        <p class='d-flex align-items-center ml-3 mb-0' style='vertical-align:middle;'>
          <%= answer.end_user.account_name %><br>
          <%= I18n.l answer.created_at, format: :short_day %>
        </p>
      </div>
      <div class='row'>
        <table class='table table-borderless offset-1 col-10'>
          <tr>
            <td><%= safe_join(answer.answer.split("\n"), tag(:br)) %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div>
    <p>コメント件数：<%= answer.comments.count %></p>
    <% answer.comments.each do |comment| %>
      <p><%= image_tag comment.end_user.get_profile_image(80,80) %></p>
      <%= comment.end_user.account_name %>
      <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% end %>
  </div>
  <div>
    <%= form_with model: [answer, @comment] do |f| %>
      <%= f.text_area :comment, placeholder: "コメントをここに" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
  <% end %>

</div>