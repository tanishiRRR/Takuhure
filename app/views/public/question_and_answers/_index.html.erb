<div class="row bg-info mt-5">
  <div class="col border border-dark">
    <div class="row mt-5">
      <div class="col">
        <h3 class="text-center text-white">気になる疑問や悩みを質問してみませんか?</h3>
      </div>
    </div>
    <div class="row mt-5 mb-5">
      <%= link_to "質問してみる", new_question_path, method: :get, class: "offset-2 col-8 btn btn-light" %>
    </div>
  </div>
</div>

<% if looking_for_answers_questions.empty? && answered_questions.empty? %>
  <div class="row mt-2">
    <div class="col">
      <h3 class="text-center" style="color:red;">
        該当する質問はありません
      </h3>
    </div>
  </div>
<% else %>
  <div class="row mt-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="contents1-tab" data-toggle="tab" href="#contents1" role="tab" aria-controls="contents1" aria-selected="true">回答募集中</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="contents2-tab" data-toggle="tab" href="#contents2" role="tab" aria-controls="contents2" aria-selected="false">回答済み</a>
      </li>
    </ul>
  </div>

  <div class="tab-contents" id="myTabContent">
    <div class="tab-pane fade show active" id="contents1" role="tabpanel" aria-labelledby="contents1-tab">
      <div class="row border border-top-0 border-dark">
        <table class="col table table-borderless mb-0">
          <tbody>
            <% looking_for_answers_questions.each do |question| %>
              <tr class="border-top border-dark">
                <td style="width: 20%">タイトル</td>
                <td style="width: 80%">
                  <%= link_to question_and_answer_path(question), method: :get do %>
                    <%= question.title %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td style="width: 20%">カテゴリー</td>
                <td style="width: 80%"><%= question.category.category_name %></td>
              </tr>
              <tr>
                <td style="width: 20%">内容</td>
                <td style="width: 80%">
                  <%= link_to question_and_answer_path(question), method: :get, class: "text-dark" do %>
                    <%= truncate(question.question, :length => 30) %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td style="width: 20%">投稿日</td>
                <td style="width: 80%"><%= question.date %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="tab-pane fade" id="contents2" role="tabpanel" aria-labelledby="contents2-tab">
      <div class="row border border-top-0 border-dark">
        <table class="col table table-borderless mb-0">
          <tbody>
            <% answered_questions.each do |question| %>
              <tr class="border-top border-dark">
                <td style="width: 20%">タイトル</td>
                <td style="width: 80%">
                  <%= link_to question_and_answer_path(question), method: :get do %>
                    <%= question.title %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td style="width: 20%">カテゴリー</td>
                <td style="width: 80%"><%= question.category.category_name %></td>
              </tr>
              <tr>
                <td style="width: 20%">内容</td>
                <td style="width: 80%">
                  <%= link_to question_and_answer_path(question), method: :get, class: "text-dark" do %>
                    <%= truncate(question.question, :length => 30) %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td style="width: 20%">投稿日</td>
                <td style="width: 80%"><%= question.date %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>