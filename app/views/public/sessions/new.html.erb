<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>ログイン</h4>
  </div>

  <%= form_with model: @end_user, url: end_user_session_path, method: :post, local: true do |f| %>
    <div class='form-group row mt-3'>
      <%= f.label :email, 'メールアドレス', class: 'col-2 form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'sample@example.com', class: 'col-10 form-control' %>
    </div>

    <div class='form-group row'>
      <%= f.label :password, 'パスワード', class: 'col-2 form-label' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'col-10 form-control' %>
    </div>

    <div class='row'>
      <div class='offset-2 col-10 pl-0'>
        <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %>
      </div>
    </div>

    <div class='form-group row mt-4'>
      <div class='form-check offset-2 col-10'>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, 'ログインしたままにする', class: 'form-check-label' %>
        <% end %>
      </div>
    </div>

    <div class='row'>
      <div class='offset-2 col-10 pl-0'>
        <%= f.submit 'ログイン', class: 'btn btn-primary pl-5 pr-5' %>
      </div>
    </div>
  <% end %>

  <div class='row mt-5'>
    <h4 class='border border-dark bg-secondary text-white p-2'>会員登録がお済みでない方</h4>
  </div>

  <div class='row mt-3'>
    <div class='offset-2 col-10 pl-0'>
      <%= link_to 'こちら', new_end_user_registration_path, class: 'border-bottom border-primary' %>から新規登録を行ってください。
    </div>
  </div>

</div>