<div class='container'>

  <div class='row mt-3'>
    <span class='border border-dark h4 bg-secondary text-white p-2'>ログイン</span>
  </div>

  <%= form_with model: @end_user, url: end_user_session_path, method: :post, local: true do |f| %>
    <div class='form-group row mt-3'>
      <%= f.label :email, 'メールアドレス', class: 'col-2 form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'sample@example.com', class: 'col-10 form-control' %>
    </div>
    <div class='form-group row'>
      <%= f.label :password, 'パスワード', class: 'col-2 form-label' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'col-10 form-control' %>
    </div>
    <div class='form-group row pl-3'>
      <div class='form-check'>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, '次回自動ログイン', class: 'form-check-label' %>
        <% end %>
      </div>
    </div>
    <div class='row'>
      <div class='offset-2 col-10 pl-0'>
        <%= f.submit 'ログイン', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <div class='row mt-5'>
    <span class='border border-dark h4 bg-secondary text-white p-2'>会員登録がお済みでない方</span>
  </div>

  <div>
    <%= render 'public/shared/links' %>
  </div>
</div>