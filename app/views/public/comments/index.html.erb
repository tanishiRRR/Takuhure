<div class="container">

  <div class="row mt-3">
    <h4>コメント一覧</h4>
  </div>

  <div class="row mt-3">
    <table class="table table-bordered offset-1 col-10">
      <thead>
        <tr>
          <th style="width: 15%">コメント投稿日</th>
          <th style="width: 15%">質問タイトル</th>
          <th style="width: 10%">カテゴリ</th>
          <th style="width: 13%">回答内容</th>
          <th style="width: 13%">投稿内容</th>
          <th style="width: 15%"></th>
          <th style="width: 19%"></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= I18n.l comment.created_at, format: :short_day %></td>
            <td><%= comment.answer.question.title %></td>
            <td><%= comment.answer.question.category.category_name %></td>
            <td><%= truncate(comment.comment, :length => 30) %></td>
            <td><%= truncate(comment.answer.answer, :length => 30) %></td>
            <td class="text-center"><%= link_to "Q&A詳細画面", question_and_answer_path(comment.answer.question.id), method: :get, class: "btn btn-primary btn-sm" %></td>
            <td class="text-center"><%= link_to "コメントを取り消す", comment_path(comment), method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "削除しますか？"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @comments %>
</div>