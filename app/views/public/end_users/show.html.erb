<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>マイページ</h4>
  </div>

  <div class='row mt-3'>
    <div class='col-3'><p class='font-weight-bold'>登録情報</p></div>
    <div class='col-5'><%= link_to '編集する', end_users_information_edit_path, class: 'btn btn-success btn-sm pl-5 pr-5' %></div>
  </div>

  <div class='row'>
    <div class="col-4">
      <%= image_tag @end_user.get_profile_image(150,150) %>
    </div>
  </div>

  <div class='row mt-3'>
    <table class='col table table-bordered border-black'>
      <tbody>
        <tr>
          <td>アカウント名</td>
          <td><%= @end_user.account_name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @end_user.email %></td>
        </tr>
        <tr>
          <td>学習ステータス</td>
          <td><%= @end_user.is_study %></td>
        </tr>
        <tr>
          <td>受験予定日</td>
          <td><%= @end_user.exam_date %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class='row'>
    <div class='col-3'><p class='font-weight-bold'>質問投稿一覧</p></div>
    <div class='col-5'><%= link_to '一覧を見る', questions_path, class: 'btn btn-primary btn-sm pl-5 pr-5' %></div>
  </div>

  <div class='row'>
    <div class='col-3'><p class='font-weight-bold'>回答投稿一覧</p></div>
    <div class='col-5'><%= link_to '一覧を見る', answers_path, class: 'btn btn-primary btn-sm pl-5 pr-5' %></div>
  </div>

</div>