<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>Q&A</h4>
  </div>

  <div class='row mt-3'>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <div class='col-4 input-group'>
        <%= f.text_field :keyword, value: @keyword, class: 'form-control input-group-prepend', placeholder: 'キーワードを入力' %>
        <%= f.submit '検索', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class=" col-4 dropdown text-center">
      <button class="btn btn-outline-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        カテゴリー検索
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <% @categories.each do |category| %>
          <%= link_to category.category_name, questions_path, class: 'dropdown-item' %>
        <% end %>
      </div>
    </div>

    <div class='col-4 text-center'>
      <%= link_to '一覧を見る', questions_path, class: 'btn btn-outline-dark pl-5 pr-5' %>
    </div>
  </div>

  <div class='row bg-info mt-5'>
    <div class='col border border-dark'>
      <div class='row mt-5'>
        <div class='col'>
          <h3 class='text-center text-white'>気になる疑問や悩みを質問してみませんか?</h3>
        </div>
      </div>
      <div class='row mt-5 mb-5'>
        <%= link_to '質問してみる', new_question_path, class: 'offset-2 col-8 btn btn-light' %>
      </div>
    </div>
  </div>

</div>