<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>Q&A</h4>
  </div>

  <%= render 'public/searches/search', categories: @categories %>

  <div class='row bg-info mt-5'>
    <div class='col border border-dark'>
      <div class='row mt-5'>
        <div class='col'>
          <h3 class='text-center text-white'>気になる疑問や悩みを質問してみませんか?</h3>
        </div>
      </div>
      <div class='row mt-5 mb-5'>
        <%= link_to '質問してみる', new_question_path, method: :get, class: 'offset-2 col-8 btn btn-light' %>
      </div>
    </div>
  </div>

  <div class="wrap">
    <ul id="tab-menu">
      <li><a href="#tab1" class="active">回答募集中</a></li>
      <li><a href="#tab2" class="">回答済み</a></li>
    </ul>

    <div id="tab-contents">
      <div id="tab1" class="tab">
        <div class='row border border-top-0 border-dark mt-5'>
          <table class='col table table-borderless mb-0'>
            <tbody>
              <% @looking_for_answers_questions.each do |question| %>
                <tr class='border-top border-dark'>
                  <td style='width: 20%'>タイトル</td>
                  <td style='width: 80%'>
                    <%= link_to question_and_answer_path(question), method: :get do %>
                      <%= question.title %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td style='width: 20%'>カテゴリー</td>
                  <td style='width: 80%'><%= question.category.category_name %></td>
                </tr>
                <tr>
                  <td style='width: 20%'>内容</td>
                  <td style='width: 80%'>
                    <%= link_to question_and_answer_path(question), method: :get, class: 'text-dark' do %>
                      <%= truncate(question.question, :length => 30) %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td style='width: 20%'>投稿日</td>
                  <td style='width: 80%'><%= question.date %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div id="tab2" class="tab">
        <div class='row border border-top-0 border-dark mt-5'>
          <table class='col table table-borderless mb-0'>
            <tbody>
              <% @answered_questions.each do |question| %>
                <tr class='border-top border-dark'>
                  <td style='width: 20%'>タイトル</td>
                  <td style='width: 80%'>
                    <%= link_to question_and_answer_path(question), method: :get do %>
                      <%= question.title %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td style='width: 20%'>カテゴリー</td>
                  <td style='width: 80%'><%= question.category.category_name %></td>
                </tr>
                <tr>
                  <td style='width: 20%'>内容</td>
                  <td style='width: 80%'>
                    <%= link_to question_and_answer_path(question), method: :get, class: 'text-dark' do %>
                      <%= truncate(question.question, :length => 30) %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td style='width: 20%'>投稿日</td>
                  <td style='width: 80%'><%= question.date %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="js/jquery.min.js"></script>
<script src="js/script.js"></script>
