<div class='container'>

  <div class='row mt-3'>
    <h4 class='border border-dark bg-secondary text-white p-2'>質問投稿フォーム</h4>
  </div>

  <%= form_with model: @category, url: questions_path, method: :post, local: true do |f| %>
    <div class='row mt-3'>
      <%= f.label :title, 'タイトル', class: 'offset-1 col-10 form-label pl-0' %>
    </div>
    <div class='row'>
      <%= f.text_field :title, required: true,autofocus: true, placeholder: 'タイトルを記入してください', class: 'offset-1 col-10 form-control' %>
    </div>

    <div class='row mt-3'>
      <%= f.label :category_id, 'タグ', class: 'offset-1 col-10 form-label pl-0' %>
    </div>
    <div class='row'>
      <%= f.text_field :category_id, required: true, class: 'offset-1 col-10 form-control' %>
    </div>

    <div class='row mt-3'>
      <%= f.label :question, '質問内容', class: 'offset-1 col-10 form-label pl-0' %>
    </div>
    <div class='row'>
      <%= f.text_area :question, required: true, placeholder: '質問内容を記入してください', class: 'offset-1 col-10 form-control' %>
    </div>

    <div class='row mt-5'>
      <%= f.submit '投稿', class: 'offset-4 col-4 btn btn-success pl-5 pr-5' %>
    </div>
  <% end %>

</div>