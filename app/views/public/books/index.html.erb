<div class='container'>

  <% if params[:keyword].present? %>
    <div class='row mt-3'>
      <h4 class='border border-dark bg-secondary text-white p-2'>検索結果</h4>
    </div>
  <% else %>
    <div class='row mt-3'>
      <h4 class='border border-dark bg-secondary text-white p-2'>本を探す</h4>
    </div>
  <% end %>

  <%= form_with url: books_path , method: :get, local: true do |f| %>
    <div class='form-group row mt-5'>
      <%= f.label :keyword, 'タイトル', class: 'col-2 form-label' %>
      <%= f.text_field :keyword, placeholder: '書籍タイトル', class: 'col-10 form-control' %>
    </div>

    <div class='row mt-3'>
      <%= f.submit '本の題名を検索', class: 'offset-4 col-4 form-control btn btn-success' %>
    </div>
  <% end %>

  <% if params[:keyword].present? %>
    <div class='row mt-5'>
      <table class='table offset-1 col-10'>
        <thead>
          <tr>
            <th style='width: 10%'></th>
            <th style='width: 20%'>タイトル</th>
            <th style='width: 20%'>著者名</th>
            <th style='width: 15%'>出版社</th>
            <th style='width: 20%'>発売日</th>
            <th style='width: 15%'></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to (image_tag(book.medium_image_url)), book.item_url %></td>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.publisher_name %></td>
              <td><%= book.sales_date %></td>
              <td class='text-center'><%= link_to '参考書に登録', books_path(id: book.isbn), method: :post, class: 'btn btn-primary btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

</div>